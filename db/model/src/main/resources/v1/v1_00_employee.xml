<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   logicalFilePath="v1_00_employee.xml">

    <changeSet id="v1_0_tag" author="sarik">
        <tagDatabase tag="v1.0"/>
    </changeSet>

    <changeSet id="v1_00_employee" author="sarik">

        <createTable catalogName="lglocal" tableName="employee" schemaName="PUBLIC" tablespace="PUBLIC">
            <column name="id" type="UUID">
                <constraints primaryKey="true"
                             nullable="false"
                             primaryKeyName="pk_employees"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="varchar2(50)">
                <constraints nullable="false"/>
            </column>
            <column name="position" type="varchar2(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar2(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
